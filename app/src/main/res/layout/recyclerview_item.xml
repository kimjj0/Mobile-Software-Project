        android:layout_height="40dp"
        android:background="@drawable/edge3"
        android:textAlignment="center"
        android:text="TextView"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/text3"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/edge3"
        android:textAlignment="center"
        android:text="TextView"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        />

</LinearLayout>
